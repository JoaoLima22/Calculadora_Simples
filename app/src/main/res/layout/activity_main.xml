<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backedit1"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="348dp"
        android:layout_height="633dp"
        android:background="@drawable/div_central"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCalculadora"
            android:text="Calculadora"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/styleTitle" />

        <Button
            android:id="@+id/btnSoma"
            android:text="+"
            app:layout_constraintEnd_toStartOf="@+id/btnSubtracao"
            app:layout_constraintHorizontal_bias="0.343"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCalculadora"
            style="@style/styleBtnPrincipal" />

        <Button
            android:id="@+id/btnMultiplicacao"
            android:layout_marginStart="32dp"
            android:text="*"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSoma"
            style="@style/styleBtnPrincipal"  />

        <Button
            android:id="@+id/btnDivisao"
            android:text="/"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toEndOf="@+id/btnMultiplicacao"
            app:layout_constraintTop_toBottomOf="@+id/btnSubtracao"
            style="@style/styleBtnPrincipal" />

        <Button
            android:id="@+id/btnSubtracao"
            android:layout_marginEnd="32dp"
            android:text="-"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCalculadora"
            style="@style/styleBtnPrincipal" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>